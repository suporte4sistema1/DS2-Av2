@model IEnumerable<Campeonato.Models.Placar>

@{
    ViewData["Title"] = "10+ Placares";
}

<br />



<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
    <h2>10+ Placares</h2>
</button>
<br />
<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-image:url('https://miro.medium.com/max/5000/1*duFts2x1vzKvqhXFqN__Bg.png')">
                <h5 class="modal-title" id="exampleModalLongTitle" style="font-weight:bold;color:yellow">10+ PLACARES</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        if (Model.First() == item)
                        {

                            <li class="list-group-item">
                                <div class="media">
                                    <img src="https://a-static.mlcdn.com.br/618x463/8-medalha-para-diversao-futebol-decoracao-festas-cromus/tamarindos/cromus-23010663/62f9df091ba51b5d051c3ace8c969aa6.jpg" style="max-width:25px;position:absolute;" />
                                    <div class="media-body">
                                        <h5 class="mt-0" style="margin-left:2em">@Html.DisplayFor(modelItem => item.Jogador.Nome)</h5>
                                        <span class="badge badge-primary badge-pill">@Html.DisplayFor(modelItem => item.TotalPontos) PONTOS</span>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {

                            <li class="list-group-item">
                                <div class="media">

                                    <div class="media-body">
                                        <h5 class="mt-0" style="margin-left:2em">@Html.DisplayFor(modelItem => item.Jogador.Nome)</h5>
                                        <span class="badge badge-primary badge-pill">@Html.DisplayFor(modelItem => item.TotalPontos) PONTOS</span>
                                    </div>
                                </div>
                            </li>
                        }

                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">FECHAR</button>
            </div>
        </div>
    </div>
</div>

